@model ZPOSprawka.Models.UsersViewModel

<h1>Usuwanie użytkownika</h1>

<h3>Czy na pewno chcesz usunąć @Model.Email?</h3>
<div>
    <h4>UsersViewModel</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            E-mail
        </dt>
        <dd class="col-sm-10">
            @Model.Email
        </dd>
        <dt class="col-sm-2">
            Imię
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Nazwisko
        </dt>
        <dd class="col-sm-10">
            @Model.Surname
        </dd>
    </dl>

    <form asp-action="Deleteuser">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Tak, usuń" class="btn btn-danger" /> |
        <a asp-action="Users">Powrót</a>
    </form>
</div>
